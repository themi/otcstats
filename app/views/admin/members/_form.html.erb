
<%= simple_form_for([:admin, @member]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :organisation %>
    <%= f.input :role, collection: Member.roles.keys, selected: @member.role %>
    <%= f.input :full_name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :training_level %>
    <%= f.input :processing_level %>
    <%= f.input :envisage_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary mb-1" %>
  </div>
<% end %>
