<div class="container">
  <h1>Organisations</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Continent</th>
        <th scope="col">Name</th>
        <th scope="col">Envisage key</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @organisations.each do |organisation| %>
        <tr>
          <td scope="col"><%= organisation.continent %></td>
          <td><%= organisation.name %></td>
          <td><%= organisation.envisage_key %></td>
          <td><%= table_action_buttons(organisation, []) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= create_new_action_button("Organisation") %>
</div>
