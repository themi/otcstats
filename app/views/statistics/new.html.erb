<div class="container">

  <%= tag.h1 data: { toggle: "tooltip", placement: "top" }, title: @graph.definition do %>
    Add <%= @graph %><small class="text-muted"> - <%= current_member %>, <%= current_member.organisation %></small>
  <% end %>

  <%= render 'form', statistic: @statistic %>

  <%= link_to 'Done', statistics_path(graph_id: @graph.id), class: "btn btn-info mb-1" %>

</div>
