<% if signed_in? %>

  <li class="nav-item dropdown">
    <a class="nav-link" href="javascript:;" id="navbarDropdownMember" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="bi bi-person-fill"></i>
      <span class="mr-2 d-none d-lg-inline small"><%= current_member.full_name %></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMember">
      <div class="dropdown-divider"></div>
      <%= link_to destroy_member_session_path, method: :delete, class: "dropdown-item" do %>
        <i class="bi bi-box-arrow-in-left"></i> Log out
      <% end %>
    </div>
  </li>

<% else %>

  <li class="nav-item">
    <%= link_to new_member_session_path, class: "nav-link" do %>
      <i class="bi bi-box-arrow-in-right"></i> Log in
    <% end %>
  </li>

<% end %>
