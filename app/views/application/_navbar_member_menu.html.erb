<% if signed_in? %>

  <li class="nav-item dropdown">
    <%= link_to destroy_member_session_path, method: :delete, class: "dropdown-item" do %>
      <i class="bi bi-box-arrow-in-left"></i>
      Log out
      <span class="small"><%= current_member.full_name %></span>
    <% end %>
  </li>

<% else %>

  <li class="nav-item">
    <%= link_to new_member_session_path, class: "nav-link" do %>
      <i class="bi bi-box-arrow-in-right"></i> Log in
    <% end %>
  </li>

<% end %>
